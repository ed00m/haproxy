global
  log 127.0.0.1   local0
  log 127.0.0.1   local1 notice
  #log loghost    local0 info
  maxconn <%= node['rackspace_haproxy']['global_max_connections'] %>
  #debug
  #quiet
  user <%= node['rackspace_haproxy']['user'] %>
  group <%= node['rackspace_haproxy']['group'] %>
<% if node['rackspace_haproxy']['enable_stats_socket'] -%>
  stats socket <%= node['rackspace_haproxy']['stats_socket_path'] %>
<% end -%>

defaults
  log     global
  mode    http
  retries 3
<% @defaults_timeouts.sort.map do | value, time | -%>
  timeout <%= value %> <%= time %>
<% end -%>
<% @defaults_options.sort.each do | option | -%>
  option <%= option %>
<% end -%>
  balance  <%= node['rackspace_haproxy']['balance_algorithm'] %>

# Set up application listeners here.

frontend http
  maxconn <%= node['rackspace_haproxy']['frontend_max_connections'] %>
  bind <%= node['rackspace_haproxy']['incoming_address'] %>:<%= node['rackspace_haproxy']['incoming_port'] %>
  default_backend servers-http

<% if node['rackspace_haproxy']['enable_ssl'] -%>
frontend https
  maxconn <%= node['rackspace_haproxy']['frontend_ssl_max_connections'] %>
  mode tcp
  bind <%= node['rackspace_haproxy']['ssl_incoming_address'] %>:<%= node['rackspace_haproxy']['ssl_incoming_port'] %>
  default_backend servers-https
<% end -%>

backend servers-http
<% if node['rackspace_haproxy']['cookie'] -%>
  cookie <%= node['rackspace_haproxy']['cookie'] %> insert indirect nocache
<% end -%>
  server localhost 127.0.0.1:4000 weight 1 maxconn <%= node['rackspace_haproxy']['member_max_connections'] %> check <% if node['rackspace_haproxy']['cookie'] %>cookie <%= member['hostname'] %><% end %>
  server localhost 127.0.0.1:4001 weight 1 maxconn <%= node['rackspace_haproxy']['member_max_connections'] %> check <% if node['rackspace_haproxy']['cookie'] %>cookie <%= member['hostname'] %><% end %>

<% if node['rackspace_haproxy']['enable_ssl'] -%>
backend servers-https
  mode tcp
  option ssl-hello-chk
  server localhost 127.0.0.1:4000 weight 1 maxconn <%= node['rackspace_haproxy']['member_max_connections'] %> check
  server localhost 127.0.0.1:4001 weight 1 maxconn <%= node['rackspace_haproxy']['member_max_connections'] %> check
<%   if node['rackspace_haproxy']['ssl_httpchk'] -%>
  option httpchk <%= node['haproxy']['ssl_httpchk'] %>
<%   end -%>
<% end -%>

<% if node['rackspace_haproxy']['enable_admin'] -%>
listen admin <%= node['rackspace_haproxy']['admin']['address_bind'] %>:<%= node['rackspace_haproxy']['admin']['port'] %>
  mode http
  stats uri /
<% end -%>
